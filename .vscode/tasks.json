{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "SUSHI: Build FSH",
      "type": "shell",
      "command": "sushi",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "IG Publisher: Full Build",
      "type": "shell",
      "command": "./_genonce.sh -no-sushi",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "SUSHI: Build FSH",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Update IG Publisher",
      "type": "shell",
      "command": "./_updatePublisher.sh -y",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "FHIR Package: Download and Snapshot Dependencies",
      "type": "shell",
      "command": "fhir-pkg-tool",
      "args": [
        "--sushi-deps-file",
        "${workspaceFolder}/sushi-config.yaml"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Serve IG Locally",
      "type": "shell",
      "command": "python3 -m http.server 8080",
      "options": {
        "cwd": "${workspaceFolder}/output"
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}
